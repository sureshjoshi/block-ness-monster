{
    "name": "block-ness-monster",
    "description": "",
    "author": "SJ",
    "license": "UNLICENSED",
    "private": true,
    "repository": {
        "url": "https://github.com/sureshjoshi/block-ness-monster"
    },
    "version": "0.1.0",
    "scripts": {
        "build": "TS_NODE_PROJECT='tsconfig.webpack.json' webpack --config=webpack.prod.ts --mode production",
        "dev": "TS_NODE_PROJECT='tsconfig.webpack.json' webpack-dev-server --config=webpack.dev.ts --mode development --hot",
        "format": "prettier --write \"{./**/*.{ts,js,json,scss,css,less,md}*, !(node_modules)/**/*}\"",
        "test": "jest",
        "testing": "jest --watch",
        "tslint-check": "tslint-config-prettier-check ./tslint.json"
    },
    "dependencies": {
        "core-js": "^3.4.1",
        "date-fns": "^2.7.0"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.91",
        "@types/copy-webpack-plugin": "^5.0.0",
        "@types/html-webpack-plugin": "^3.2.1",
        "@types/jest": "^24.0.23",
        "@types/mini-css-extract-plugin": "^0.8.0",
        "@types/node": "^12.12.9",
        "@types/webpack": "^4.41.0",
        "autoprefixer": "^9.7.2",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.5",
        "css-loader": "^3.2.0",
        "cssnano": "^4.1.10",
        "file-loader": "^4.2.0",
        "fork-ts-checker-webpack-plugin": "^3.1.0",
        "glob-all": "^3.1.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "mini-css-extract-plugin": "^0.8.0",
        "postcss": "^7.0.23",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.19.1",
        "purgecss-webpack-plugin": "^1.6.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.0.0",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.5.2",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-immutable": "^6.0.1",
        "tslint-loader": "^3.5.4",
        "tslint-react": "^4.1.0",
        "typescript": "^3.7.2",
        "url-loader": "^2.2.0",
        "webpack": "^4.41.2",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "webpack-merge": "^4.2.2"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,js}"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "maxWorkers": 1,
        "moduleFileExtensions": [
            "tsx",
            "ts",
            "jsx",
            "js",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "^app/(.*)$": "<rootDir>/src/app/$1",
            "^data/(.*)$": "<rootDir>/src/data/$1",
            "^domain/(.*)$": "<rootDir>/src/domain/$1",
            "^office/(.*)$": "<rootDir>/src/office/$1",
            "^tests/(.*)$": "<rootDir>/tests/$1",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/webpackMock.ts",
            "office-ui-fabric-react/lib/(.*)$": "office-ui-fabric-react/lib-commonjs/$1"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setupEnzyme.ts"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "prettier": {
        "arrowParens": "always",
        "jsxBracketSameLine": true,
        "printWidth": 100,
        "trailingComma": "es5",
        "tabWidth": 4
    }
}
